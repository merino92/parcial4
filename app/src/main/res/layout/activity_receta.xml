<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".receta">

    <TextView
            android:text="RECETA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_marginTop="26dp"
            android:layout_alignParentTop="true" android:textAlignment="center" android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark" android:textSize="18sp"/>
    <TextView
            android:text="nombre"
            android:layout_width="376dp"
            android:layout_height="wrap_content" android:id="@+id/txtnombre" android:layout_marginTop="67dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"/>
    <TextView
            android:text="apellidos"
            android:layout_width="371dp"
            android:layout_height="wrap_content" android:id="@+id/txtapellido" android:layout_marginTop="102dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:layout_alignParentEnd="true" android:layout_marginEnd="24dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="208dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/receta" android:layout_marginTop="161dp" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_marginStart="21dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="24dp" android:hint="receta"/>
    <Button
            android:text="guardar"
            android:layout_width="130dp"
            android:layout_height="wrap_content" android:id="@+id/button2" android:layout_marginTop="413dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="136dp" android:layout_alignParentEnd="true" android:layout_marginEnd="145dp"
            android:onClick="GuardarReceta"/>
</RelativeLayout>